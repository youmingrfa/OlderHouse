<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!--标题的基础样式-->
    <style name="base_textView_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>

    </style>

    <!--返回按钮的样式-->
    <style name="common_left_back_imageView_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:src">@mipmap/icon_back</item>
        <item name="android:background">@drawable/back_img_selector</item>
        <!--<item name="android:layout_marginLeft">15dp</item>-->
        <!--<item name="android:layout_marginTop">15dp</item>-->
        <item name="android:padding">15dp</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_centerVertical">true</item>
    </style>

    <!--清空输入框样式-->
    <style name="common_clear_input_imageView_style">
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">35dp</item>
        <item name="android:background">@null</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:scaleType">center</item>
        <item name="android:src">@mipmap/delete_username</item>
    </style>

    <!--登录输入框样式-->
    <style name="login_editText_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/gray_2</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:padding">16dp</item>
        <item name="android:scrollHorizontally">true</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColorHint">@color/gray01</item>
        <item name="android:textSize">@dimen/textSize_14</item>
    </style>

    <!--获取验证码按钮样式-->
    <style name="login_btn_getCode_style" parent="Base.Widget.AppCompat.Button">
        <item name="android:layout_width">@dimen/login_quick_login_getCode_width</item>
        <item name="android:layout_height">@dimen/login_quick_login_getCode_height</item>
        <item name="android:layout_marginRight">@dimen/login_quick_login_getCode_marginRight</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:background">@drawable/btn_get_code_selector</item>
        <item name="android:gravity">center</item>
        <item name="android:text">@string/login_input_btn_get_code</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/login_content_size</item>
    </style>

    <!--验证提示-->
    <style name="login_tip_getCode_style" parent="Base.Widget.AppCompat.Button">
        <item name="android:layout_width">@dimen/login_quick_login_getCode_width</item>
        <item name="android:layout_height">@dimen/login_quick_login_getCode_height</item>
        <item name="android:layout_marginRight">@dimen/login_quick_login_getCode_marginRight</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:background">@drawable/btn_get_code_selector</item>
        <item name="android:gravity">center</item>
        <item name="android:text">提示信息</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/login_content_size</item>
    </style>

    <!--登录按钮样式-->
    <style name="login_btn_style" parent="Base.Widget.AppCompat.Button">
        <item name="android:layout_width">150dp</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_height">36dp</item>
        <item name="android:radius">20dp</item>
        <item name="android:layout_marginTop">30dp</item>
        <!--<item name="android:background">@drawable/round_btn_orange_self_selector</item>-->
        <item name="android:background">@color/alpha90_green</item>
        <item name="android:enabled">false</item>
        <item name="android:text">@string/login_titleBar_login</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/textSize_18</item>
    </style>

</resources>
